@model LAB5_MVC_IT.Models.AddRoleModel
@{
    ViewBag.Title = "AddRoleToUser";
}

<h2>Add user to Role</h2>

@using (Html.BeginForm("AddRoleToUser", "Account", FormMethod.Post))
{

    <div class="form-group">
        User Email:
    </div>
    <div class="form-group">
        @Html.TextBoxFor(r => Model.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Select role:
    </div>
    <div class="form-group">
        @Html.DropDownListFor(r=> Model.SelectedRole, new SelectList(Model.Roles), new { @class="form-control"})
    </div>
    <input type="submit" value="Add role to user" class="btn btn-primary">
}
